    "matrix": "node scripts/runner.js magic-number/js/generate-magic-matrix.js",
    "crawl": "node scripts/runner.js magic-number/crawlers/kbo-python-working-crawler.py",
    "snapshot": "node scripts/runner.js magic-number/js/daily-snapshot.js snapshot",
    "history": "node scripts/runner.js magic-number/js/daily-snapshot.js history",
    "trend": "node scripts/runner.js magic-number/js/daily-snapshot.js trend",
